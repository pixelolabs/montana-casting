
<div class="form-section login-page-tempate reset-password light-brown-bottom-image
">
  <div class="container-540 container-section">
    {% comment %}
    This form must use 'reset_customer_password'
    {% endcomment %}
    {% form 'reset_customer_password' %}
    <h1 class="h2 section-header__title text-center h1-medium">{{ 'customer.reset_password.title' | t }}</h1>
    <!--<p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>-->
    {{ form.errors | default_errors }}
    <input placeholder="{{ 'customer.reset_password.password' | t }}" type="password" value="" name="customer[password]"
      id="ResetPassword" {% if form.errors contains "password" %} class="error" {% endif %}>
    <input placeholder="{{ 'customer.reset_password.password_confirm' | t }}" type="password" value=""
      name="customer[password_confirmation]" id="PasswordConfirmation" {% if form.errors
      contains "password_confirmation" %} class="error" {% endif %}>
    <div class="text-center btn-wrapper reset-password">
      <button type="submit" class="btn--primary">{{ 'customer.reset_password.submit' | t }}</button>
     <!-- <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>-->
      <!--   <input type="submit" class="btn-green" value="{{ 'customer.reset_password.submit' | t }}">-->
    </div>
    {% endform %}
  </div>
</div>