<div class="testimonial-section">
  <div class="container-1440">
    <div class="container-1400">
      <div class="user-image">
        {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'large' }}" alt="">
        {% endif %}
      </div>
      {% if section.settings.description %}
      <p class="h3">
        {{ section.settings.description }}
      </p>
      {% endif %}
      {% if section.settings.attributes %}
      <span>{{ section.settings.attributes }}</span>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Testimonial",
    "settings": [
      {
         "type": "image_picker",
         "id": "image",
         "label": "User Image"
      },
      {
        "id": "description",
        "type": "text",
        "label": "Description",
        "default": "Add Descriptions"
      },
      {
        "id": "attributes",
        "type": "text",
        "label": "Attributes"
      }
    ]
  }
{% endschema %}